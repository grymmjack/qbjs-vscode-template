{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run",
			"dependsOn": "Compile",
			"command": "${command:livePreview.start}",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Compile",
			"dependsOn": "Remove",
			"type": "shell",
			"command": "${fileDirname}\\qb2js.exe",
			"args": [
				"${fileDirname}\\${fileBasenameNoExtension}.bas",
				">",
				"${fileDirname}\\${fileBasenameNoExtension}.js"
			],
			"presentation": {
				"reveal": "silent",
				"panel": "shared",
				"focus": false
			}
		},
		{
			"label": "Remove",
			"type": "shell",
			"command": "del",
			"args": [
				"${fileDirname}\\${fileBasenameNoExtension}.js"
			],
			"presentation": {
				"reveal": "never",
				"panel": "shared",
				"focus": false
			}
		}
	]
}
